<header class="header">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <div>
                <a asp-controller="ArticleModel" asp-action="Index" class="btn text-info">Логотип</a>
                <a asp-controller="ArticleModel" asp-action="Index" class="btn text-white">Популярные блоги</a>
                <a asp-controller="Home" asp-action="Details" class="btn text-white position-absolute">Как стать Автором</a>
            </div>
            <div class="text-left">
                <a asp-controller="ArticleModel" asp-action="Find" class="btn text-white">Поиск</a>
           
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Index" class="btn text-white">@User.Identity.Name</a>

                @if (User.IsInRole("admin"))
                {
                    <a asp-controller="Admin" asp-action="Index">Админ Панель</a>
                }
            }
            else
            {
                <a asp-controller="Account" class="btn bg-white" asp-action="Register">Регистрация</a>
                <a asp-controller="Account" class="btn bg-white" asp-action="Login">Войти</a>

            }
            </div>
        </div>
    </nav>
</header>